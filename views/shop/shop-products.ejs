<%- include ('../partails/header') -%>

        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="header__logo">
                        <a href="/"><img src="img/logo.png" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <nav class="header__menu">
                        <ul>
                            <li><a href="/">Home</a></li>
                            <li class="active"><a href="/products">Shop</a></li>
                            <li><a href="/contact">Contact</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-3">
                    <div class="header__cart">
                        <ul>
                          <% if (currentUser) { %>
                            <li>
                              <a href="/favourite">
                                <i class="fa fa-heart">
                                </i>
                                <span>
                                  <%= favouriteNum %>
                                </span>
                              </a>
                            </li>
                          <% } %>
                            <li>
                              <a href="/mycart">
                                <i class="fa fa-shopping-bag">
                                </i>
                                <span class="products-num">
                                  <% if(session.cart) { %>
                                      <%= session.cart.totalQty %>
                                    <% }else{ %>
                                      0
                                    <% } %>
                                </span>
                              </a>
                            </li>
                        </ul>
                        <div class="header__cart__price">
                          <% if(session.cart){ %>
                          item: <span> $<%= session.cart.totalPrice %>  </span>
                        <% }else{ %>
                          item: <span> $0 </span>
                          <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="humberger__open">
                <i class="fa fa-bars"></i>
            </div>
        </div>
    </header>
    <!-- Header Section End -->

    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>Organi Shop</h2>
                        <div class="breadcrumb__option">
                            <a href="./index.html">Home</a>
                            <span>Shop</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- flash messages -->
    <div class="container" >
      <% if(error && error.length > 0){ %>
      <div class="alert alert-danger mt-4" role="alert">
        <%= error %>
      </div>
    <% } %>
    <% if(success && success.length > 0){ %>
      <div class="alert alert-success mt-4" role="alert" >
        <%= success %>
      </div>
      <% } %>
    </div>
    <!-- flash messages end-->

    <!-- Product Section Begin -->
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="filter__item">
                      <!-- copy -->
                      <div class="section-title product__discount__title">
                          <h2>All Products</h2>
                      </div>

                      <!-- copy2 -->
                      <div class="filter__found">
                        <h6><span><%= productsNum %></span> Products found</h6>
                      </div>
                    </div>


                    <div class="row">
                    <%  products.forEach((item) => { %>



                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="product__item">
                                <div class="product__item__pic set-bg" data-setbg="<%= item.image %>">
                                    <ul class="product__item__pic__hover">
                                      <li><a href="/add-to-cart/<%=item._id%>/1" class="shop-cart-circle"><i class="fa fa-shopping-cart"></i></a></li>
                                      <li><a href="/products/<%=item._id%>"><i class="fa fa-info"></i></a></li>
                                      <li><a href="/favourite/<%=item._id%>"><i class="fa fa-heart"></i></a></li>
                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <h6><a href="#"><%= item.name %></a></h6>
                                    <h5>$<%= item.price %></h5>
                                </div>
                            </div>
                        </div>

                        <%  }); %>




                    </div>
                    <div class="product__pagination">
                        <a href="#">1</a>
                        <a href="#">2</a>
                        <a href="#">3</a>
                        <a href="#"><i class="fa fa-long-arrow-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Product Section End -->

<%- include ('../partails/footer') -%>
